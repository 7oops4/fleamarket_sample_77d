= render "layouts/single-header"
.contents
  .contents__form
  = form_for @product do |f|
    .contents__form__display
      .contents__form__display__body
        .contents__form__display__body__title
          出品画像
          %span.essential
            必須
        .contents__form__display__body__text
          最大5枚までアップロードできます
        .contents__form__display__body__image
          .contents__form__display__body__image__box
            .contents__form__display__body__image__box__previews
              - if @product.persisted?
                - @product.images.each_with_index do |preview, i|
                  = image_tag preview.image.url, data: { index: i }, width: "100", height: '100'
              = f.fields_for :images do |img|
                .js-image{"data-index" => "#{img.index}"}
                = f.label :images, class: 'hidden',for: 'product_images_attributes_0_image' do
                  %i.fa.fa-camera.fa-2x
                  =img.file_field :image, class: 'js-file'
                  %br/
                  %span.js-remove 
                  - if @product.persisted?
                    = img.check_box :_destroy, data:{ index: img.index }, class: 'hidden-destroy'
                  - if @product.persisted?
                    .js-image{"data-index" => "#{@product.images.count}"}
                      = file_field_tag :image, name: "product[images_attributes][#{@product.images.count}][image]", class: 'js-file'
                      .js-remove 削除
    .contents__form__product
      .contents__form__product__name
        .contents__form__product__name__title
          商品名
          %span.essential
            必須
        .contents__form__product__name__text
        = f.text_area :title, class:"contents__form__product__name__text__box",placeholder:" 40文字まで",maxlength:"40"
      .contents__form__product__introduction
        .contents__form__product__introduction__title
          商品の説明
          %span.essential
            必須
        .contents__form__product__introduction__text
          = f.text_area :introduction, class:"contents__form__product__introduction__text__box",placeholder:"商品の説明（必須1,000文字以内)&#13;&#10;(色、素材、重さ、定価、注意点など）&#13;&#10;&#13;&#10;例)2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。".html_safe,maxlength:"1000",cols:"35",rows:"28",wrap:"hard"
    .contents__form__detail
      %p
        商品詳細
        .contents__form__detail__category
          .contents__form__detail__category__title
            カテゴリー
            %span.essential
              必須
          .contents__form__detail__category__text
            = f.collection_select(:category_id, @category_parent_first, :id, :text, {prompt: "選択してください"}, {id: 'parent_category',class: "contents__form__detail__category__text__box"})
        .contents__form__detail__brand
          .contents__form__detail__brand__title
            ブランド
            %span.option
              任意
          .contents__form__detail__brand__text
            %input{class:"contents__form__detail__brand__text__box",placeholder:" 例）シャネル",maxlength:"40"}
        .contents__form__detail__status
          .contents__form__detail__status__title
            商品の状態
            %span.essential
              必須
          .contents__form__detail__status__text
            = f.select :status, [['新品・未使用', 1], ['未使用に近い', 2], ['目立った傷や汚れなし', 3], ['やや傷や汚れあり', 4], ['傷や汚れあり', 5], ['全体的に状態が悪い', 6]], { include_blank: '選択してください'}, { class: 'contents__form__detail__status__text__box' , required: true }
    .contents__form__delivery
      %p
        配送について
        .contents__form__delivery__price
          .contents__form__delivery__price__title
            配送料の負担
            %span.essential
              必須
          .contents__form__delivery__price__text
            = f.select :delivery_person, [['送料込み(出品者負担)', '送料込み(出品者負担)'], ['着払い(購入者負担)', '着払い(購入者負担)']], { include_blank: '選択してください'}, { class: 'contents__form__delivery__price__text__box' , required: true }
        .contents__form__delivery__person
          .contents__form__delivery__person__title
            配送の方法
            %span.essential
              必須
          .contents__form__delivery__person__text
            = f.select :delivery_way, [['未定', '未定'], ['クロネコヤマト ', 'クロネコヤマト'], ['ゆうパック', 'ゆうパック'], ['ゆうメール', 'ゆうメール']], { include_blank: '選択してください'}, { class: 'contents__form__delivery__person__text__box' , required: true }    
          .contents__form__delivery__area__title
            発送元の地域
            %span.essential
              必須
          .contents__form__delivery__area__text
            = f.select :from_area, [['北海道', '北海道'], ['青森県', '青森県'], ['岩手県', '岩手県'], ['宮城県', '宮城県'], ['秋田県', '秋田県'], ['山形県', '山形県'], ['福島県', '福島県'], ['茨城県', '茨城県'], ['栃木県', '栃木県'], ['群馬県', '群馬県'], ['埼玉県', '埼玉県'], ['千葉県', '千葉県'], ['東京都', '東京都'], ['神奈川県', '神奈川県'], ['新潟県', '新潟県'], ['富山県', '富山県'], ['石川県', '石川県'], ['福井県', '福井県'], ['山梨県', '山梨県'], ['長野県', '長野県'], ['岐阜県', '岐阜県'], ['静岡県', '静岡県'], ['愛知県', '愛知県'], ['三重県', '三重県'], ['滋賀県', '滋賀県'], ['京都府', '京都府'], ['大阪府', '大阪府'], ['兵庫県', '兵庫県'], ['奈良県', '奈良県'], ['和歌山県', '和歌山県'], ['鳥取県', '鳥取県'], ['島根県', '島根県'], ['岡山県', '岡山県'], ['広島県', '広島県'], ['山口県', '山口県'], ['徳島県', '徳島県'], ['香川県', '香川県'], ['愛媛県', '愛媛県'], ['高知県', '高知県'], ['福岡県', '福岡県'], ['佐賀県', '佐賀県'], ['長崎県', '長崎県'], ['熊本県', '熊本県'], ['大分県', '大分県'], ['宮崎県', '宮崎県'], ['鹿児島県', '鹿児島県'], ['沖縄県', '沖縄県']], { include_blank: '選択してください'}, { class: 'contents__form__delivery__area__text__box' , required: true }
        .contents__form__delivery__time
          .contents__form__delivery__time__title
            配送までの日数
            %span.essential
              必須
          .contents__form__delivery__time__text
            = f.select :delivery_leadtime, [['1~2日で発送', '1~2日で発送'], ['2~3日で発送', '2~3日で発送'], ['4~7日で発送', '4~7日で発送']], { include_blank: '選択してください'}, { class: 'contents__form__delivery__time__text__box' , required: true }
    .contents__form__sale
      %p
        価格 (¥300~9,999,999)
        .contents__form__sale__price
          .contents__form__sale__price__title
            販売価格
            %span.essential
              必須
            %span.price
          = f.number_field :price, class:"contents__form__sale__price__box",placeholder:"0",maxlength:"20"
    .contents__form__motion
      = f.submit :登録中, class:"contents__form__motion__auctionbtn",value:"出品する"
      = link_to "戻る", root_path, class: "contents__form__motion__returnbtn"
= render "layouts/single-footer"
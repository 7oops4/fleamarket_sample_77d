= render "layouts/main-header"

.main-container.clearfix
  = render "users/mypage-side"
  .main-container__content
    %h2.main-container__content__head
      クレジットカード情報入力
    .registration-card
      .registration-card__box
        = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm", class: "box") do
          .input-group-form
            .card-number
              カード番号
            %span.form-require 必須
            = text_field_tag "number", "", class: "number input-default invalid_data", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            %ul.has-error-text{ id: 'card-no-error-wrapper' }
          .input-group-form
            .card-limit
              有効期限
            %span.form-require 必須
            %br
            .use_limit
              .use_limit-month
                %select#exp_month.select-default{ name: "exp_month", type: "text", class: "selected" }
                  %option{ value: ""} --
                  %option{ value: "1" }01
                  %option{ value: "2" }02
                  %option{ value: "3" }03
                  %option{ value: "4" }04
                  %option{ value: "5" }05
                  %option{ value: "6" }06
                  %option{ value: "7" }07
                  %option{ value: "8" }08
                  %option{ value: "9" }09
                  %option{ value: "10" }10
                  %option{ value: "11" }11
                  %option{ value: "12" }12
                %span 月
              .use_limit-year
                %select#exp_year.select-default{ name: "exp_year", type: "text", class: "selected" }
                  %option{ value: "" } --
                  %option{ value: "2019" }19
                  %option{ value: "2020" }20
                  %option{ value: "2021" }21
                  %option{ value: "2022" }22
                  %option{ value: "2023" }23
                  %option{ value: "2024" }24
                  %option{ value: "2025" }25
                  %option{ value: "2026" }26
                  %option{ value: "2027" }27
                  %option{ value: "2028" }28
                  %option{ value: "2029" }29
                %span 年
                %ul#expire-mm-error-wrapper.has-error-text
                %ul#expire-yy-error-wrapper.has-error-text
          .input-group-form
            .card-security
              セキュリティコード
            %span.form-require 必須
            = text_field_tag "cvc", "", class: "input-default cvc invalid_data", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
            %ul#security-code-error-wrapper.has-error-text
            .signup-sqcode
              .signup-sqcode__text
                %span.form-question ?
                カード裏面の番号とは？
          .registration-card__form-btn-default
            #card_token
            = submit_tag "追加する", id: "token_submit", class: "card_btn step_btn"

= render "layouts/footer-publicity"
= render "layouts/footer-introduction"
= render "layouts/bottom-camera"
